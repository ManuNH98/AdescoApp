<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imagenParcela"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_foreground">

        </ImageView>

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/imagenParcela"
            android:layout_toRightOf="@id/imagenParcela"
            android:visibility="invisible"
            android:text="id"
            android:textSize="1sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/nombreParcela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/imagenParcela"
            android:layout_toRightOf="@id/imagenParcela"
            android:text="Nombre de parcela"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/nombreParcela"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/imagenParcela"
            android:layout_toRightOf="@id/imagenParcela"
            android:text="Info"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/metros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/imagenParcela"
            android:layout_toRightOf="@id/imagenParcela"
            android:text="Metros" />

        <TextView
            android:id="@+id/tipoCultivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/metros"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/imagenParcela"
            android:layout_toRightOf="@id/imagenParcela"
            android:text="Tipo de cultivo" />

        <TextView
            android:id="@+id/fechaInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tipoCultivo"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/imagenParcela"
            android:layout_toRightOf="@id/imagenParcela"
            android:visibility="invisible"
            android:text="FechaInicio" />

        <TextView
            android:id="@+id/fechaFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fechaInicio"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/imagenParcela"
            android:layout_toRightOf="@id/imagenParcela"
            android:visibility="invisible"
            android:text="FechaFin" />

        <ImageView
            android:id="@+id/editIcon"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/tipoCultivo"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_toEndOf="@+id/imagenParcela"
            android:layout_toRightOf="@id/tipoCultivo"
            android:src="@drawable/edit" />

        <ImageView
            android:id="@+id/deleteIcon"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/tipoCultivo"
            android:layout_toEndOf="@id/tipoCultivo"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/delete"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>