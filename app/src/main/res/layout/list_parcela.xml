<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imagenParcela"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_foreground"/>

        <TextView
            android:id="@+id/nombreParcela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Parcela"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/imagenParcela"
            android:layout_toEndOf="@id/imagenParcela"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/metrosParcela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metros cuadrados"
            android:layout_toRightOf="@id/imagenParcela"
            android:layout_toEndOf="@id/imagenParcela"
            android:layout_below="@+id/nombreParcela"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/tipoParcela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo cosecha"
            android:layout_toRightOf="@id/imagenParcela"
            android:layout_toEndOf="@id/imagenParcela"
            android:layout_below="@+id/metrosParcela"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>